@using Kanban.Models
@model List<AtividadeModel>

<div class="container">
    <div class="row">
        <div class="col-4">
         
            <h2>Pendentes</h2>

            @if (Model.Count > 0)
            {
                foreach (var atividade in Model.Where(x => x.Status.Nome == "Pendente"))
                {
                    <div class="card text-center">
                        <div class="card-header">
                            @atividade.Status.Nome
                        </div>
                        <div class="card-body">
                          <h5> @atividade.Titulo </h5>
                            <p> @atividade.Descricao </p>
                            <a asp-action="MudarCard" asp-controller="Atividade" asp-route-id="@atividade.Id" class="btn btn-success">Proximo Card</a>
                        </div>
                        <div class="card-footer">
                            @atividade.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                }
            }

        </div>
        <div class="col-4">
            
            <h2>Em Andamento</h2>

            @if (Model.Count > 0)
            {
                foreach (var atividade in Model.Where(x => x.Status.Nome == "Em Andamento"))
                {
                    <div class="card text-center">
                        <div class="card-header">
                            @atividade.Status.Nome
                        </div>
                        <div class="card-body">
                            <h5> @atividade.Titulo </h5>
                            <p> @atividade.Descricao </p>
                            <a asp-action="CardAnterior" asp-controller="Atividade" asp-route-id="@atividade.Id" class="btn btn-primary">Card Anterior</a>
                            <a asp-action="MudarCard" asp-controller="Atividade" asp-route-id="@atividade.Id" class="btn btn-success">Proximo Card</a>
                        </div>
                        <div class="card-footer">
                            @atividade.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-4">
          
            <h2>Finalizada</h2>

            @if (Model.Count > 0)
            {
                foreach (var atividade in Model.Where(x => x.Status.Nome == "Finalizada"))
                {
                    <div class="card text-center">
                        <div class="card-header">
                            @atividade.Status.Nome
                        </div>
                        <div class="card-body">
                            <h5> @atividade.Titulo </h5>
                            <p> @atividade.Descricao </p>
                            <a asp-action="CardAnterior" asp-controller="Atividade" asp-route-id="@atividade.Id" class="btn btn-primary">Card Anterior</a>
                            <a asp-action="Excluir" asp-controller="Atividade" asp-route-id="@atividade.Id" class="btn btn-danger">Deletar Card</a>
                        </div>
                        <div class="card-footer">
                            @atividade.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>